
@{
    ViewData["Title"] = "Index";
}


<div class="divBackGroundImage">
    <div class="row pb-4">
        <div class="col-lg-7 d-lg-block d-none">
            <h2 class="text-info">Cover Type List</h2>
        </div>
        <div class="col-lg-5 text-lg-right text-center">
            <a asp-controller="CoverType" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create New Cover Type
